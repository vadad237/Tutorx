@page "/students"
@using TutorX.Shared.DTOs
@using TutorX.Client.Services
@using Microsoft.AspNetCore.Components.Forms
@inject IStudentService StudentService
@inject IJSRuntime JSRuntime

<PageTitle>Students</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Students</h1>
        </div>
        <div class="col-auto">
            <button class="btn btn-success me-2" @onclick="ShowImportModal">
                <i class="bi bi-file-earmark-excel"></i> Import Excel
            </button>
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-circle"></i> Add Student
            </button>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }
    else if (successMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
        </div>
    }

    @if (!loading)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Card Number</th>
                        <th>Year</th>
                        <th>Group</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (students.Any())
                    {
                        @foreach (var student in students)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.Name</td>
                                <td>@student.Email</td>
                                <td>@(student.CardNumber ?? "-")</td>
                                <td>@(student.Year?.ToString() ?? "-")</td>
                                <td>@(student.GroupName ?? "No Group")</td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-1" @onclick="() => ShowEditModal(student)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteStudent(student.Id)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No students found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Import Modal -->
@if (showImportModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Import Students from Excel</h5>
                    <button type="button" class="btn-close" @onclick="CloseImportModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Select Excel File</label>
                        <InputFile class="form-control" OnChange="HandleFileSelection" accept=".xlsx,.xls" />
                        <div class="form-text">
                            Excel file should contain columns: Meno (name), Priezvisko (surname), Číslo karty (card number), Ročník (year)
                        </div>
                    </div>
                    @if (importProgress)
                    {
                        <div class="text-center">
                            <div class="spinner-border spinner-border-sm me-2" role="status"></div>
                            <span>Importing students...</span>
                        </div>
                    }
                    @if (importResult != null)
                    {
                        <div class="alert @(importResult.Success ? "alert-success" : "alert-warning")" role="alert">
                            <strong>@importResult.Message</strong>
                            <br />
                            Imported: @importResult.ImportedCount
                            @if (importResult.FailedCount > 0)
                            {
                                <br />
                                <span>Failed: @importResult.FailedCount</span>
                            }
                            @if (importResult.Errors.Any())
                            {
                                <hr />
                                <ul class="mb-0">
                                    @foreach (var error in importResult.Errors)
                                    {
                                        <li>@error</li>
                                    }
                                </ul>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseImportModal">Close</button>
                    <button type="button" class="btn btn-primary" @onclick="ImportStudents" disabled="@(selectedFile == null || importProgress)">
                        <i class="bi bi-upload"></i> Import
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Add/Edit Modal -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditing ? "Edit Student" : "Add Student")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" @bind="studentName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" @bind="studentEmail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Card Number (optional)</label>
                        <input type="text" class="form-control" @bind="studentCardNumber" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Year (optional)</label>
                        <input type="number" class="form-control" @bind="studentYear" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Group ID (optional)</label>
                        <input type="number" class="form-control" @bind="studentGroupId" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveStudent">
                        @(isEditing ? "Update" : "Create")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<StudentDto> students = new();
    private bool loading = true;
    private string? errorMessage;
    private string? successMessage;
    private bool showModal = false;
    private bool isEditing = false;
    private int? editingStudentId;

    // Import modal state
    private bool showImportModal = false;
    private IBrowserFile? selectedFile;
    private bool importProgress = false;
    private ImportResult? importResult;

    // Form fields
    private string studentName = "";
    private string studentEmail = "";
    private string? studentCardNumber;
    private int? studentYear;
    private int? studentGroupId;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        try
        {
            loading = true;
            errorMessage = null;
            students = await StudentService.GetStudentsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading students: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowAddModal()
    {
        isEditing = false;
        editingStudentId = null;
        studentName = "";
        studentEmail = "";
        studentCardNumber = null;
        studentYear = null;
        studentGroupId = null;
        showModal = true;
    }

    private void ShowEditModal(StudentDto student)
    {
        isEditing = true;
        editingStudentId = student.Id;
        studentName = student.Name;
        studentEmail = student.Email;
        studentCardNumber = student.CardNumber;
        studentYear = student.Year;
        studentGroupId = student.GroupId;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveStudent()
    {
        try
        {
            if (isEditing && editingStudentId.HasValue)
            {
                var updateDto = new UpdateStudentDto
                {
                    Name = studentName,
                    Email = studentEmail,
                    CardNumber = studentCardNumber,
                    Year = studentYear,
                    GroupId = studentGroupId
                };
                await StudentService.UpdateStudentAsync(editingStudentId.Value, updateDto);
                successMessage = "Student updated successfully!";
            }
            else
            {
                var createDto = new CreateStudentDto
                {
                    Name = studentName,
                    Email = studentEmail,
                    CardNumber = studentCardNumber,
                    Year = studentYear,
                    GroupId = studentGroupId
                };
                await StudentService.CreateStudentAsync(createDto);
                successMessage = "Student created successfully!";
            }

            CloseModal();
            await LoadStudents();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving student: {ex.Message}";
        }
    }

    private async Task DeleteStudent(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this student?"))
        {
            try
            {
                await StudentService.DeleteStudentAsync(id);
                successMessage = "Student deleted successfully!";
                await LoadStudents();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting student: {ex.Message}";
            }
        }
    }

    // Import functionality
    private void ShowImportModal()
    {
        showImportModal = true;
        selectedFile = null;
        importResult = null;
        importProgress = false;
    }

    private void CloseImportModal()
    {
        showImportModal = false;
        selectedFile = null;
        importResult = null;
    }

    private void HandleFileSelection(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        importResult = null;
    }

    private async Task ImportStudents()
    {
        if (selectedFile == null)
        {
            errorMessage = "Please select a file first";
            return;
        }

        try
        {
            importProgress = true;
            importResult = null;

            // Read file as byte array
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024); // 10MB max
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            var fileBytes = memoryStream.ToArray();

            // Call import service
            importResult = await StudentService.ImportStudentsFromExcelAsync(fileBytes);

            if (importResult.Success)
            {
                successMessage = $"Successfully imported {importResult.ImportedCount} students!";
                await LoadStudents();

                // Auto close modal after 2 seconds if successful
                await Task.Delay(2000);
                CloseImportModal();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error importing students: {ex.Message}";
            importResult = new ImportResult
            {
                Success = false,
                Message = "Import failed",
                Errors = new List<string> { ex.Message }
            };
        }
        finally
        {
            importProgress = false;
        }
    }
}
