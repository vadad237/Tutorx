@page "/students"
@using TutorX.Shared.DTOs
@using TutorX.Client.Services
@inject IStudentService StudentService
@inject IJSRuntime JSRuntime

<PageTitle>Students</PageTitle>

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h1>Students</h1>
        </div>
        <div class="col-auto">
            <button class="btn btn-primary" @onclick="ShowAddModal">
                <i class="bi bi-plus-circle"></i> Add Student
            </button>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Card Number</th>
                        <th>Year</th>
                        <th>Group</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (students.Any())
                    {
                        @foreach (var student in students)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.Name</td>
                                <td>@student.Email</td>
                                <td>@(student.CardNumber ?? "-")</td>
                                <td>@(student.Year?.ToString() ?? "-")</td>
                                <td>@(student.GroupName ?? "No Group")</td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-1" @onclick="() => ShowEditModal(student)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteStudent(student.Id)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center">No students found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Add/Edit Modal -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditing ? "Edit Student" : "Add Student")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" @bind="studentName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" @bind="studentEmail" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Card Number (optional)</label>
                        <input type="text" class="form-control" @bind="studentCardNumber" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Year (optional)</label>
                        <input type="number" class="form-control" @bind="studentYear" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Group ID (optional)</label>
                        <input type="number" class="form-control" @bind="studentGroupId" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveStudent">
                        @(isEditing ? "Update" : "Create")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<StudentDto> students = new();
    private bool loading = true;
    private string? errorMessage;
    private bool showModal = false;
    private bool isEditing = false;
    private int? editingStudentId;

    // Form fields
    private string studentName = "";
    private string studentEmail = "";
    private string? studentCardNumber;
    private int? studentYear;
    private int? studentGroupId;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        try
        {
            loading = true;
            errorMessage = null;
            students = await StudentService.GetStudentsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading students: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowAddModal()
    {
        isEditing = false;
        editingStudentId = null;
        studentName = "";
        studentEmail = "";
        studentCardNumber = null;
        studentYear = null;
        studentGroupId = null;
        showModal = true;
    }

    private void ShowEditModal(StudentDto student)
    {
        isEditing = true;
        editingStudentId = student.Id;
        studentName = student.Name;
        studentEmail = student.Email;
        studentCardNumber = student.CardNumber;
        studentYear = student.Year;
        studentGroupId = student.GroupId;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task SaveStudent()
    {
        try
        {
            if (isEditing && editingStudentId.HasValue)
            {
                var updateDto = new UpdateStudentDto
                {
                    Name = studentName,
                    Email = studentEmail,
                    CardNumber = studentCardNumber,
                    Year = studentYear,
                    GroupId = studentGroupId
                };
                await StudentService.UpdateStudentAsync(editingStudentId.Value, updateDto);
            }
            else
            {
                var createDto = new CreateStudentDto
                {
                    Name = studentName,
                    Email = studentEmail,
                    CardNumber = studentCardNumber,
                    Year = studentYear,
                    GroupId = studentGroupId
                };
                await StudentService.CreateStudentAsync(createDto);
            }

            CloseModal();
            await LoadStudents();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving student: {ex.Message}";
        }
    }

    private async Task DeleteStudent(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this student?"))
        {
            try
            {
                await StudentService.DeleteStudentAsync(id);
                await LoadStudents();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting student: {ex.Message}";
            }
        }
    }
}
